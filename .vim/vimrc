set wrap
set number
set relativenumber
set autoindent
set nocompatible

set colorcolumn=120
set encoding=utf-8

"Vim display tab:(>----),space:(-)
set list
set listchars=tab:>-,trail:-

"Enable mouse support
set mouse=a
set backspace=2
set t_Co=256
set laststatus=2

"tab,space settings
set tabstop=4 " set the width of a TAB
set shiftwidth=4
set softtabstop=4 " set the number of columns for hitting a TAB key
set expandtab " Expand TABs to spacesã€€
set ruler

"search settings
"set ignorecase
set smartcase

"keeps the cursor in the middle of the page
set scrolloff=999

"set colortheme
colorscheme slate
syntax on
filetype plugin on

"Add custom headers
autocmd bufnewfile *.py so /home/maojinrui/.vim/template/py.template

