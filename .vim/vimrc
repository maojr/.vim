set laststatus=2

"tab,space settings
set tabstop=4 " set the width of a TAB
set shiftwidth=4
set softtabstop=4 " set the number of columns for hitting a TAB key
set expandtab " Expand TABs to spacesã€€
set ruler

"search settings
"set ignorecase
set smartcase

"keeps the cursor in the middle of the page
set scrolloff=999

"set colortheme
colorscheme slate
set t_Co=256    "to enable 256 colors in vim
syntax on
filetype plugin on

"Add custom headers
autocmd bufnewfile *.py so $HOME/.vim/template/py.template

